<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    >

    <LinearLayout

        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_210"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/size_30"
                android:id="@+id/btn_close"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                >
                <ImageView

                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:contentDescription="@string/image_content_description"
                    android:src="@drawable/dialog_ic_delete" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/img_warn"
                    android:layout_width="@dimen/size_78"
                    android:layout_height="@dimen/size_78"
                    android:src="@drawable/fingervein2"
                    android:contentDescription="@string/image_content_description"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginTop="@dimen/size_6"
                    android:id="@+id/txt_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放置静脉指"
                    android:gravity="right"
                    android:textColor="@color/field_value"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/size_5"
                >
                <TextView
                    android:layout_marginTop="@dimen/size_6"
                    android:id="@+id/txt_Message"

                    android:layout_width="@dimen/size_160"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/orange"
                    android:lineSpacingExtra="@dimen/size_2"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/size_10"

                >

                <Button
                    android:visibility="invisible"
                    android:id="@+id/btn_ReCollect"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/widget_common_btn"
                    android:gravity="center"
                    android:text="@string/btntx_recollotfingervein"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>