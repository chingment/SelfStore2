<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    >

    <LinearLayout

        android:layout_width="@dimen/size_250"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        android:padding="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/size_30"
                android:id="@+id/btn_close"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                >

                <ImageView

                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:contentDescription="@string/image_content_description"
                    android:src="@drawable/dialog_ic_delete" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dialog_confirm_tips_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_22"
                android:gravity="center_horizontal|center"
                android:text="@string/dialog_numkey_title"
                android:textColor="@color/dialog_tips"
                android:textSize="@dimen/size_14" />
        </LinearLayout>


        <LinearLayout
        android:id="@+id/txt_all"
        android:layout_width="match_parent"
            android:layout_height="@dimen/size_32"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_val"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="@dimen/size_32"
            android:layout_marginLeft="@dimen/size_16"
            android:background="@drawable/dialog_numkey_input_normal"
            android:paddingLeft="@dimen/size_5"
            android:gravity="left|center_vertical"
            android:text=""
            android:textSize="@dimen/size_16"/>


            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/size_42"
                android:layout_height="@dimen/size_26"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/dialog_keynum_detele"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_16"
                android:contentDescription="@string/image_content_description"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/table_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dialog_numkey_line" />

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="@dimen/size_1"
                    android:tag="1"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="@dimen/size_1"
                    android:tag="2"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/btn_input_amount_style"
                    android:tag="3"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_4"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="@dimen/size_1"
                    android:tag="4"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="@dimen/size_1"
                    android:tag="5"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/btn_input_amount_style"
                    android:tag="6"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_7"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="@dimen/size_1"
                    android:tag="7"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="@dimen/size_1"
                    android:tag="8"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/btn_input_amount_style"
                    android:tag="9"
                    android:text="9" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:baselineAligned="false"

            >

            <LinearLayout
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_numkey_bottom_radius_left"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:contentDescription="@string/image_content_description"
                    android:src="@drawable/dialog_numkey_delete" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dialog_numkey_line" />

            <Button
                android:id="@+id/btn_0"
                style="@style/btn_input_amount_style"
                android:tag="0"
                android:text="0" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dialog_numkey_line" />

            <LinearLayout
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_numkey_bottom_radius_right"
                android:gravity="center_horizontal|center_vertical"

                >

                <ImageView
                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:contentDescription="@string/image_content_description"
                    android:src="@drawable/dialog_numkey_sure" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>