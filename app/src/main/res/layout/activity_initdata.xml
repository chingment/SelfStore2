<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="com.uplink.selfstore.activity.InitDataActivity">




    <com.uplink.selfstore.ui.LoadingView
        android:id="@+id/loading_ani"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/loading_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="260dp"
            android:layout_height="12dp"
            android:max="100"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loading_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/activity_initdata_textview_loading_msg_text"
            android:textSize="@dimen/size_10" />

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="@dimen/size_78"
            android:layout_height="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/widget_common_btn"
            android:text="@string/activity_initdata_button_retry_text"
            android:textColor="@color/white"
            android:textSize="@dimen/size_10"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_initdata_textview_machineid_text"
                android:textColor="@color/field_name"
                android:textSize="@dimen/size_10" />

            <TextView
                android:id="@+id/txt_machineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/field_value"
                android:textSize="@dimen/size_10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
