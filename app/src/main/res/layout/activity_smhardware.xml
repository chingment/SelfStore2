<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/layout_nav_header" />

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200">

            <LinearLayout
                android:layout_width="0dp"
                android:padding="@dimen/size_5"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="@dimen/size_14">
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:lineSpacingExtra="@dimen/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/camera_title_renlian"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_120">

                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="@dimen/size_120"
                        android:background="@color/black"
                        android:layout_height="@dimen/size_120">

                        <SurfaceView
                            android:id="@+id/rennian_camera_surfaceView"
                            android:background="@null"
                            android:layout_width="@dimen/size_120"
                            android:layout_height="@dimen/size_120" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/renlian_camera_btn_open"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_open"/>
                    <Button
                        android:id="@+id/renlian_camera_btn_captureStill"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_captureStill"/>
                    <Button
                        android:id="@+id/renlian_camera_btn_record"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_record"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:padding="@dimen/size_5"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="@dimen/size_14">
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:lineSpacingExtra="@dimen/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/camera_title_jigui"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_120">

                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="@dimen/size_120"
                        android:background="@color/black"
                        android:layout_height="@dimen/size_120">

                        <SurfaceView
                            android:id="@+id/jigui_camera_surfaceView"
                            android:background="@null"
                            android:layout_width="@dimen/size_120"
                            android:layout_height="@dimen/size_120" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/jigui_camera_btn_open"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_open"/>
                    <Button
                        android:id="@+id/jigui_camera_btn_captureStill"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_captureStill"/>
                    <Button
                        android:id="@+id/jigui_camera_btn_record"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_record"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:padding="@dimen/size_5"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="@dimen/size_14">
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:lineSpacingExtra="@dimen/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/camera_title_chuhuokou"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_120">

                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="@dimen/size_120"
                        android:background="@color/black"
                        android:layout_height="@dimen/size_120">

                        <SurfaceView
                            android:id="@+id/chuhuokou_camera_surfaceView"
                            android:background="@null"
                            android:layout_width="@dimen/size_120"
                            android:layout_height="@dimen/size_120" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/chuhuokou_camera_btn_open"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_open"/>
                    <Button
                        android:id="@+id/chuhuokou_camera_btn_captureStill"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_captureStill"/>
                    <Button
                        android:id="@+id/chuhuokou_camera_btn_record"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_20"
                        android:textSize="@dimen/sp_6"
                        android:text="@string/camera_btn_record"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ds_hd_layout"
            android:layout_width="match_parent"
            android:padding="@dimen/size_5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="@dimen/size_14">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:lineSpacingExtra="@dimen/size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="售卖机(ds)"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/zs_hd_tvtx_ck"
                    />

                <EditText
                    android:id="@+id/ds_hd_et_ck"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="ttymxc1" />


            </LinearLayout>

            <LinearLayout
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical"

                >

                <Button
                    android:id="@+id/ds_hd_btn_connect"
                    android:layout_width="@dimen/size_38"
                    android:layout_height="@dimen/size_20"
                    android:textSize="@dimen/sp_6"
                    android:text="连接"/>

                <Button
                    android:id="@+id/ds_hd_btn_gozero"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_20"
                    android:textSize="@dimen/sp_6"
                    android:text="回原点"/>


            </LinearLayout>


            <LinearLayout
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ds_tv_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/zs_hd_layout"
            android:padding="@dimen/size_5"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="@dimen/size_14">
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:lineSpacingExtra="@dimen/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/zs_hd_title"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="start|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/zs_hd_tvtx_ck"
                        />

                    <EditText
                        android:id="@+id/zs_hd_et_ck"
                        android:layout_width="@dimen/size_60"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="ttymxc3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/zs_hd_tvtx_plateid"
                        />

                    <EditText
                        android:id="@+id/zs_hd_et_plateid"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/zs_hd_tvtx_numid"
                        />

                    <EditText
                        android:id="@+id/zs_hd_et_numid"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="1" />
                </LinearLayout>


            <LinearLayout
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical"

                >
                <Button
                    android:id="@+id/zs_hd_btn_connect"
                    android:layout_width="@dimen/size_38"
                    android:layout_height="@dimen/size_20"
                    android:textSize="@dimen/sp_6"
                    android:text="@string/zs_hd_btntx_connect"/>
                <Button
                    android:id="@+id/zs_hd_btn_testopen"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_20"
                    android:textSize="@dimen/sp_6"
                    android:text="@string/zs_hd_btntx_testopen"/>
                <Button
                    android:id="@+id/zs_hd_btn_teststatus"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_20"
                    android:textSize="@dimen/sp_6"
                    android:text="@string/zs_hd_btntx_teststatus"/>
            </LinearLayout>

               <LinearLayout
                android:baselineAligned="false"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/zs_tv_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>