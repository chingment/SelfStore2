<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/layout_nav_header" />

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/size_5"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="@dimen/size_14">
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:lineSpacingExtra="@dimen/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="摄像头"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_140">

                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="@dimen/size_140"
                        android:background="@color/black"
                        android:layout_height="@dimen/size_140">

                        <TextureView
                            android:id="@+id/cameraView"
                            android:background="@null"
                            android:layout_width="@dimen/size_140"
                            android:layout_height="@dimen/size_140" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30">
                    <Button
                        android:id="@+id/cameraOpenByJiGui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="打开机柜摄像头"/>
                    <Button
                        android:id="@+id/cameraOpenByChuHuoKou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="打开出货口摄像头"/>
                    <Button
                        android:id="@+id/cameraClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="关闭"/>
                    <Button
                        android:id="@+id/cameraCaptureStill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="拍照"/>
                    <Button
                        android:id="@+id/cameraRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="录像"/>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/cameraTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="测试"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/size_5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="@dimen/size_14">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:lineSpacingExtra="@dimen/size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="下位机"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
               android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30">


                <Button
                    android:id="@+id/btnMachineGoZero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:text="回原点"/>


            </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100">

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/zs_hd_layout"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="@dimen/size_14">
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:lineSpacingExtra="@dimen/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/zs_hd_title"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="start|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/zs_hd_tvtx_ck"
                        />

                    <EditText
                        android:id="@+id/zs_hd_et_ck"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="ttyS1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/zs_hd_tvtx_plateid"
                        />

                    <EditText
                        android:id="@+id/zs_hd_et_plateid"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/zs_hd_tvtx_numid"
                        />

                    <EditText
                        android:id="@+id/zs_hd_et_numid"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="1" />

                    <Button
                        android:id="@+id/zs_hd_btn_testopen"
                        android:layout_width="@dimen/size_70"
                        android:layout_height="@dimen/size_30"
                        android:textSize="@dimen/sp_8"
                        android:text="@string/zs_hd_btntx_testopen"/>
                    <Button
                        android:id="@+id/zs_hd_btn_teststatus"
                        android:layout_width="@dimen/size_70"
                        android:layout_height="@dimen/size_30"
                        android:textSize="@dimen/sp_8"
                        android:text="@string/zs_hd_btntx_teststatus"/>
                </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/zs_hd_layout"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>