<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="@dimen/size_80"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70"
            android:background="@null"
            android:contentDescription="@string/image_content_description"
            android:scaleType="fitXY"
            android:src="@drawable/img_default" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        tools:ignore="UselessParent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_16"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_16"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:visibility="gone"
                android:id="@+id/tag_charTag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="标签1"
                android:background="@drawable/tag_chartag1"
                android:textColor="@color/tag_chartag1"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tag_charTag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="标签2"
                android:background="@drawable/tag_chartag2"
                android:textColor="@color/tag_chartag2"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tag_charTag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="标签3"
                android:background="@drawable/tag_chartag3"
                android:textColor="@color/tag_chartag3"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_briefDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="3"
                android:text="描述"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/size_80"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/btn_decrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center">

            <Button
                android:id="@+id/btn_call"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_32"
                android:layout_marginRight="@dimen/size_8"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_primary"
                android:text="立即咨询"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>