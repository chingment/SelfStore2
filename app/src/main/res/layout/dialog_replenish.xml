<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    >

    <LinearLayout

        android:layout_width="@dimen/size_250"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        android:padding="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/size_30"
                android:id="@+id/dlg_Close"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                >

                <ImageView

                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:contentDescription="@string/image_content_description"
                    android:src="@drawable/dialog_ic_delete" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/size_120"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_5"
                android:paddingEnd="@dimen/size_5"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/tmp_wapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
               <ImageView

                android:id="@+id/iv_SkuImg"
                android:layout_width="@dimen/size_58"
                android:layout_height="@dimen/size_58"
                android:src="@drawable/default_image"
                android:contentDescription="@string/image_content_description"
                />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_SlotName"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:background="@drawable/slot_num_bg"
                        android:textColor="@color/slot_num"
                        android:gravity="center"
                        android:text="01"

                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size_3"
                    android:paddingTop="@dimen/size_3">


                    <TextView
                        android:id="@+id/tv_SkuName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="2"
                        android:textColor="@color/field_value"
                        android:textSize="@dimen/sp_10"
                        android:text=""

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size_3"
                    android:paddingTop="@dimen/size_3">
                    <TextView
                        android:id="@+id/tv_SkuCumCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/field_value"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size_3"
                    android:paddingTop="@dimen/size_3">
                    <TextView
                        android:id="@+id/tv_SkuSpecDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/field_value"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/size_10"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:paddingBottom="@dimen/size_2"
                    android:paddingTop="@dimen/size_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_slotedit_tvtx_skusellqty"
                        android:textColor="@color/field_name"
                        android:textSize="@dimen/sp_10"  />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="end|center_vertical"
                        >
                        <TextView
                            android:id="@+id/tv_SellQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:width="@dimen/size_12"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_20"
                        android:paddingBottom="@dimen/size_2"
                        android:paddingTop="@dimen/size_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlg_slotedit_tvtx_skulockqty"
                            android:textColor="@color/field_name"
                            android:textSize="@dimen/sp_10"  />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:layout_gravity="end|center_vertical"
                            android:gravity="end|center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_LockQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:width="@dimen/size_12"
                                android:text="0"
                                android:gravity="center"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_24"
                        android:paddingBottom="@dimen/size_3"
                        android:paddingTop="@dimen/size_3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlg_slotedit_tvtx_skusumqty"
                            android:textColor="@color/field_name"
                            android:textSize="@dimen/sp_10"  />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:layout_gravity="end|center_vertical"
                            android:gravity="end|center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_SumQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:width="@dimen/size_12"
                                android:text="0"
                                android:gravity="center"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>


                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:paddingBottom="@dimen/size_3"
                    android:paddingTop="@dimen/size_3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvtx_planrshqty"
                        android:textColor="@color/field_name"
                        android:textSize="@dimen/sp_10"  />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="end|center_vertical"
                        >

                        <TextView
                            android:id="@+id/tv_PlanRshQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:width="@dimen/size_12"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:paddingBottom="@dimen/size_3"
                    android:paddingTop="@dimen/size_3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvtx_realrshqty"
                        android:textColor="@color/field_name"
                        android:textSize="@dimen/sp_10"  />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="end|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/btn_DecRealRshQty"
                            android:layout_width="@dimen/size_18"
                            android:layout_height="@dimen/size_18"
                            android:background="@null"
                            android:contentDescription="@string/image_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/tmp_btn_cart_decrease" />
                        <TextView
                            android:id="@+id/tv_RealRshQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:width="@dimen/size_12"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_10" />

                        <ImageView
                            android:id="@+id/btn_IncRealRshQty"
                            android:layout_width="@dimen/size_18"
                            android:layout_height="@dimen/size_18"
                            android:background="@null"
                            android:contentDescription="@string/image_content_description"
                            android:scaleType="fitXY"
                            android:src="@drawable/tmp_btn_cart_increase" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_32"
            android:gravity="center"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_Save"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_20"
                android:background="@drawable/widget_btn_orange"
                android:gravity="center"
                android:text="@string/btntx_save"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_SkuId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/field_value"
                android:textSize="@dimen/sp_10"/>


            <TextView
                android:id="@+id/tv_Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/field_value"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_SlotId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/field_value"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_StockId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/field_value"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>